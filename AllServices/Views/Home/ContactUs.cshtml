
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/homeMaster.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/assets/css/style0.css" rel="stylesheet" />

<div class="registration">
    <div class="registration_left m-3 " style="margin-left:500px;">


        <div class="registration_form">
            <!-- Form -->
            @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-5">
                    <label> 
                        <span>Name</span>
                        <input placeholder="first name:" name="Name" type="text" tabindex="1" required autofocus>
                    </label>
                </div>

                <div class="col-5">
                    <label>
                    <span>Email Id</span>
                        <input placeholder="email address:" name="Email" type="email" tabindex="3" required>
                    </label>
                </div>
                <div>
                        <span>Message</span>
                    <label style="height:200px; width:500px;">
                        <textarea name="Message"placeholder=" Your Message:" type="text" ></textarea>
                    </label>
                </div>


                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Create" />
                    </div>
                </div>


            }
            <!-- /Form -->
        </div>
    </div>
    <div class="clearfix"></div>
</div>